{
  "cli": {
    "version": ">= 15.0.15",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "GOOGLE_SERVICES_JSON": "@invergordonbar:GOOGLE_SERVICES_JSON"
      },
      "hooks": {
        "prebuild": "echo $GOOGLE_SERVICES_JSON | base64 --decode > android/app/google-services.json"
      }
    },
    "preview": {
      "distribution": "internal"
    },
    "production": {
      "autoIncrement": true
    }
  },
  "submit": {
    "production": {}
  }
}
